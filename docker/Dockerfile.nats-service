# use official NATS image
FROM nats:2.10-alpine

# expose NATS ports
# 4222 - client connections
# 8222 - HTTP monitoring
# 6222 - cluster routing
EXPOSE 4222 8222 6222

# create nats user for security
USER nats

# default NATS configuration with monitoring enabled
CMD ["nats-server", "--http_port", "8222", "--port", "4222"]
