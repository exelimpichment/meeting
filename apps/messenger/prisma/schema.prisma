generator client {
  provider = "prisma-client-js"
  output   = "../generated/messenger-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model messages {
  id        String   @id @default(uuid())
  groupId   String
  userId    String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
