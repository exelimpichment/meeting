{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
     "paths": {
      "@apps/meeting/*": ["apps/meeting/*"],
      "@apps/meeting-api-gateway/*": ["apps/meeting-api-gateway/*"],
      "@apps/iam/*": ["apps/meeting-api-gateway/src/iam/*"],
      "@libs/*": ["libs/*"]
    }
  }
}
