{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["./*"],
      "@app/shared-authentication": ["libs/shared-authentication/src"],
      "@app/shared-authentication/*": ["libs/shared-authentication/src/*"],
      "@app/config": ["libs/config/src"],
      "@app/config/*": ["libs/config/src/*"],
      "@app/hashing": ["libs/hashing/src"],
      "@app/hashing/*": ["libs/hashing/src/*"],

      "@apps/*": ["./apps/*"],
      "@libs/*": ["./libs/*"],
      "@packages/*": ["./packages/*"]
    }
  },
  "include": ["apps/**/*", "libs/**/*", "packages/**/*"],
  "references": [
    {
      "path": "./packages/meeting-api-gateway"
    },
    {
      "path": "./packages/messenger"
    }
  ]
}
