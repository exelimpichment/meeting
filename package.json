{
  "name": "meeting",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:fix": "prettier --write --end-of-line lf --single-quote --trailing-comma all \"**/*.{js,ts,jsx,tsx,json,css,scss,md}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/meeting/main",
    "start:all:dev": "concurrently \"npm run start:dev meeting-api-gateway\" \"npm run start:dev meeting\" \"npm run start:dev messenger\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/meeting/test/jest-e2e.json",
    "generate:auth-db": "dotenv -e apps/meeting-api-gateway/.env.meeting-api-gateway -- prisma generate --schema=apps/meeting-api-gateway/src/iam/prisma/schema.prisma",
    "migrate:auth-db": "dotenv -e apps/meeting-api-gateway/.env.meeting-api-gateway -- prisma migrate dev --schema=apps/meeting-api-gateway/src/iam/prisma/schema.prisma",
    "generate:messenger-db": "dotenv -e apps/messenger/.env.messenger -- prisma generate --schema=apps/messenger/prisma/schema.prisma",
    "migrate:messenger-db": "dotenv -e apps/messenger/.env.messenger -- prisma migrate dev --schema=apps/messenger/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "11.0.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.1",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "11.1.0",
    "@nestjs/platform-express": "11.0.1",
    "@nestjs/platform-ws": "11.1.0",
    "@nestjs/websockets": "11.1.0",
    "@prisma/client": "6.6.0",
    "@types/cookie-parser": "1.4.8",
    "bcrypt": "5.1.1",
    "cookie-parser": "1.4.7",
    "jsonwebtoken": "9.0.2",
    "kafkajs": "2.2.4",
    "nats": "2.29.3",
    "nestjs-zod": "4.3.1",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "ws": "8.18.2",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.1",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.10.7",
    "@types/bcrypt": "5.0.2",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "22.10.7",
    "@types/supertest": "6.0.2",
    "@types/ws": "8.18.1",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.2",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "prisma": "6.6.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/contracts(|/.*)$": "<rootDir>/libs/contracts/src/$1"
    }
  }
}
